<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="pyramidRunForCustomPyramid" class="com.rmoore8869.mario4.PyramidRun">
        <property name="customPyramid" ref="undefinedPyramid"/>
    </bean>
    <bean id="standardPyramidRun" class="com.rmoore8869.mario4.PyramidRun">
        <property name="customPyramid" ref="fullPyramidtoConsole"/>
    </bean>
    <bean id="fullPyramidtoConsole" class="com.rmoore8869.mario4.Pyramid">
        <property name="pyramidSteps" value="23"/>
        <property name="mfw" ref="Console"/>
        <property name="pyramidName" value="the largest possible pyramid."/>
    </bean>
    <bean id="smallestPyramidtoConsole" class="com.rmoore8869.mario4.Pyramid">
        <property name="pyramidSteps" value="1"/>
        <property name="mfw" ref="Console"/>
        <property name="pyramidName" value="the smallest possible pyramid."/>
    </bean>
    <bean id="illegalPyramidtoError" class="com.rmoore8869.mario4.Pyramid">
        <property name="pyramidSteps" value="100"/>
        <property name="mfw" ref="Error"/>
        <property name="pyramidName" value="not an allowably-sized pyramid."/>
    </bean>
    <bean id="undefinedPyramid" class="com.rmoore8869.mario4.Pyramid">
        <property name="pyramidName" value="a pyramid chosen by the user."/>
    </bean>

    <bean id="Console" class="com.rmoore8869.mario4.marioOutputs.MToConsole">
    </bean>
    <bean id="File" class="com.rmoore8869.mario4.marioOutputs.MToFile">
    </bean>
    <bean id="Error" class="com.rmoore8869.mario4.marioOutputs.ErrorOutput">
    </bean>
        </beans>
