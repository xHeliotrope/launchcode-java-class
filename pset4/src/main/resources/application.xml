<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="fullPyramidtoConsole" class="com.rmoore8869.mario4.Pyramid">
        <property name="pyrSteps" value="23"/>
        <property name="marioFileWriter" ref="Console"/>
        <property name="pyramidVisual" value=""/>
    </bean>
    <bean id="smallestPyramidtoFile" class="com.rmoore8869.mario4.Pyramid">
        <property name="pyrSteps" value="1"/>
        <property name="marioFileWriter" ref="File"/>
        <property name="pyramidVisual" value=""/>
    </bean>

    <bean id="illegalPyramidtoError" class="com.rmoore8869.mario4.Pyramid">
        <property name="pyrSteps" value="100"/>
        <property name="marioFileWriter" ref="Error"/>
        <property name="pyramidVisual" value=""/>
    </bean>

    <bean id="Console" class="com.rmoore8869.mario4.marioOutputs.MToConsole">
    </bean>
    <bean id="File" class="com.rmoore8869.mario4.marioOutputs.MToFile">
    </bean>
    <bean id="Error" class="com.rmoore8869.mario4.marioOutputs.ErrorOutput">
    </bean>
        </beans>
